---
const { data } = Astro.props;

if (!data) return null;

const { sectionTitle, sectionSubtitle, symptoms } = data;

// Default symptoms if not provided
const defaultSymptoms = [
    { icon: "cardiology", title: "Chest Pain" },
    { icon: "thermometer", title: "High Fever" },
    { icon: "orthopedics", title: "Broken Bones" },
    { icon: "sentiment_very_dissatisfied", title: "Severe Pain" },
    { icon: "healing", title: "Deep Cuts" },
    { icon: "pulmonology", title: "Breathing Issues" },
    { icon: "sick", title: "Head Injury" },
    { icon: "coronavirus", title: "Severe Flu" },
];

const displaySymptoms = symptoms || defaultSymptoms;
---

<section class="py-24 bg-background-subtle">
    <div class="max-w-[1440px] mx-auto px-6 lg:px-12">
        <!-- Section Header -->
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span
                class="text-accent font-bold text-sm tracking-widest uppercase mb-3 block"
                >Symptom Checker</span
            >
            <h2
                class="text-4xl md:text-5xl font-bold text-text-main tracking-tight mb-6"
            >
                {sectionTitle || "When should you visit the ER?"}
            </h2>
            <p class="text-lg text-text-muted">
                {
                    sectionSubtitle ||
                        "If you are experiencing any of these symptoms, please visit us immediately or call 911 for life-threatening emergencies."
                }
            </p>
        </div>

        <!-- Symptoms Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {
                displaySymptoms.map((symptom: any) => (
                    <div class="flex flex-col items-center justify-center p-8 rounded-2xl bg-white text-center shadow-sm hover:shadow-md transition-all hover:-translate-y-1 group cursor-default">
                        <span class="material-symbols-outlined text-accent text-4xl mb-4 group-hover:scale-110 transition-transform">
                            {symptom.icon || "warning"}
                        </span>
                        <span class="font-bold text-lg text-text-main">
                            {symptom.title}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</section>
